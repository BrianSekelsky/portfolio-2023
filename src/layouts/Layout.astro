---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>

    <link rel="stylesheet" href="https://use.typekit.net/oum5vhm.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,300;1,400&display=swap" rel="stylesheet">
  </head>
  <body class="">
    <div class="border-t">
      <div
        class="sm:fixed sm:h-screen sm:br-1 w-16 hidden sm:block sm:border-r sm:bg-white"
      >
        <Nav />
      </div>
      <div class="sm:ml-16 overflow-hidden">
        <div class="block sm:hidden border-b">
          <Nav />
        </div>
        <slot />
        <Footer />
      </div>
    </div>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "freighttextcmp-pro", serif;
    font-weight: 300;
    font-style: normal;
  }

  @font-face {
    font-family: "freighttextcmp-pro", serif;
    font-weight: 300;
    font-style: italic;
  }


  .inter-<uniquifier > {
    font-family: "Inter", sans-serif;
    font-optical-sizing: auto;
    font-weight: <weight>;
    font-style: normal;
    font-variation-settings: "slnt" 0;
  }

  .ibm-plex-mono-light {
  font-family: "IBM Plex Mono", monospace;
  font-weight: 300;
  font-style: normal;
}

.ibm-plex-mono-regular-italic {
  font-family: "IBM Plex Mono", monospace;
  font-weight: 400;
  font-style: italic;
}

  .project-grid p {
    padding-bottom: 2rem;
  }

  .load-in {
    opacity: 0;
  }
</style>

<script>
  /**gsap*/
  import gsap from "gsap";
  const header = document.getElementsByClassName("load-in");

  const fadeInTimeline = gsap.timeline({});
  const fadeOutTimeline = gsap.timeline({});

  fadeInTimeline.set(header, { opacity: 0 }).to(header, {
    opacity: 1,
    duration: 1,
    delay: 0.25,
    stagger: 0.5,
  });

  window.addEventListener("beforeunload", (event) => {
    fadeOutTimeline.set(header, { opacity: 1 }).to(header, {
      opacity: 0,
      duration: 1,
      delay: 0.25,
      stagger: 0.5,
    });
  });
</script>
