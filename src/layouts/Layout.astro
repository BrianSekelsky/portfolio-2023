---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>

    <link rel="preconnect" href="https://use.typekit.net" crossorigin>
    <link rel="dns-prefetch" href="https://use.typekit.net">
    <link rel="stylesheet" href="https://use.typekit.net/abc2kbg.css">
    <script defer src="/scripts/card-animation.js"></script>
    <!-- Custom cursor disabled for now -->
    <!-- <script defer src="/scripts/cursor.js"></script> -->
  </head>
  <body class="overflow-x-hidden flex flex-col text-black dark:bg-dark-bg dark:text-dark-text">
    <ClientRouter />
    <div id="transition-overlay"></div>

    <div class="site-container">
      <div class="h-screen w-100 flex flex-col">
        <div class="block bg-purewhite">
          <Nav />
        </div>
        <main data-astro-transition>
          <slot />
        </main>
        <Footer />
      </div>
    </div>
  </body>
</html>
<style is:global>
  :root {
    /* ==========================================
       SITE MARGINS - Tweak these values!
       ========================================== */
    --site-padding-mobile: 0.5rem;  /* 8px - nearly full width on mobile */
    --site-padding-desktop: 8rem;   /* 128px */

    /* ==========================================
       MAX WIDTH - Content won't stretch beyond this
       ========================================== */
    --site-max-width: 1600px;

    /* ==========================================
       BORDER COLORS - Tweak these values!
       ========================================== */
    --border-color: #E3E1DD;        /* Light mode borders */
    --border-color-subtle: #BFB8B0; /* Lighter borders for dividers */
    --card-border-radius: 1rem;     /* Card corner radius */

    --card-shadow-color: #e0e0e0;
    --transition-overlay-bg: rgba(249, 249, 249, 0.6);
  }

  .dark {
    --border-color: #1e1e3a;        /* Dark mode borders */
    --border-color-subtle: #141428; /* Darker subtle borders */
    --card-shadow-color: oklch(20% 0.003 286.286);
    --transition-overlay-bg: rgba(15, 18, 20, 0.8);
  }

  body {
    height: 100%;
    -webkit-text-size-adjust: 100%;
  }

  /* Site container with max-width */
  .site-container {
    max-width: var(--site-max-width);
    margin-left: auto;
    margin-right: auto;
  }

  /* Site padding utility - uses the CSS variables above */
  .site-padding {
    padding-left: var(--site-padding-mobile);
    padding-right: var(--site-padding-mobile);
  }

  @media (min-width: 640px) {
    .site-padding {
      padding-left: var(--site-padding-desktop);
      padding-right: var(--site-padding-desktop);
    }
  }

  /* Apply site padding to children (for grids) */
  .site-padding-children > * {
    padding-left: var(--site-padding-mobile);
    padding-right: var(--site-padding-mobile);
  }

  @media (min-width: 640px) {
    .site-padding-children > * {
      padding-left: var(--site-padding-desktop);
      padding-right: var(--site-padding-desktop);
    }
  }

  /* ==========================================
     LOAD-IN ANIMATIONS
     ========================================== */
  @keyframes loadIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .load-in {
    opacity: 0;
    animation: loadIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  /* Stagger children within project grids */
  .project-grid > * {
    opacity: 0;
    animation: loadIn 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .project-grid > *:nth-child(1) { animation-delay: 0.05s; }
  .project-grid > *:nth-child(2) { animation-delay: 0.1s; }
  .project-grid > *:nth-child(3) { animation-delay: 0.15s; }
  .project-grid > *:nth-child(4) { animation-delay: 0.2s; }
  .project-grid > *:nth-child(5) { animation-delay: 0.25s; }
  .project-grid > *:nth-child(6) { animation-delay: 0.3s; }
  .project-grid > *:nth-child(7) { animation-delay: 0.35s; }
  .project-grid > *:nth-child(8) { animation-delay: 0.4s; }
  .project-grid > *:nth-child(n+9) { animation-delay: 0.45s; }

  /* Stagger multiple load-in elements */
  .load-in:nth-of-type(1) { animation-delay: 0s; }
  .load-in:nth-of-type(2) { animation-delay: 0.1s; }
  .load-in:nth-of-type(3) { animation-delay: 0.2s; }
  .load-in:nth-of-type(4) { animation-delay: 0.3s; }

  /* Stagger gallery cards */
  #gallery > * {
    opacity: 0;
    animation: loadIn 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  #gallery > *:nth-child(1) { animation-delay: 0.1s; }
  #gallery > *:nth-child(2) { animation-delay: 0.15s; }
  #gallery > *:nth-child(3) { animation-delay: 0.2s; }
  #gallery > *:nth-child(4) { animation-delay: 0.25s; }
  #gallery > *:nth-child(5) { animation-delay: 0.3s; }
  #gallery > *:nth-child(6) { animation-delay: 0.35s; }
  #gallery > *:nth-child(7) { animation-delay: 0.4s; }
  #gallery > *:nth-child(8) { animation-delay: 0.45s; }
  #gallery > *:nth-child(n+9) { animation-delay: 0.5s; }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .load-in,
    .project-grid > *,
    #gallery > * {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }

  /* Site border utility - uses CSS variables */
  .site-border {
    border-color: var(--border-color);
  }

  .site-border-subtle {
    border-color: var(--border-color-subtle);
  }

  /* Shared card styling for header areas */
  .header-card {
    background: #FFFFFF;
    border-radius: var(--card-border-radius);
    border: 1px solid var(--border-color);
    overflow: hidden;
    position: relative;
  }

  .dark .header-card {
    background: #0a0a1a;
    border-color: var(--border-color);
  }

  .project-grid p {
    padding-bottom: 2rem;
  }

  #transition-overlay {
    position: fixed;
    top: 0; left: 0;
    width: 100vw; height: 100vh;
    background: var(--transition-overlay-bg);
    pointer-events: none;
    z-index: 999;
    opacity: 0;
    backdrop-filter: blur(0px);
    transition: backdrop-filter 0.3s ease;
  }

  /* Custom cursor styles - disabled for now
  .cursor-dot,
  .cursor-circle {
    position: fixed;
    top: 0;
    left: 0;
    pointer-events: none;
    z-index: 10000;
    will-change: transform;
  }

  .cursor-dot {
    width: 8px;
    height: 8px;
    margin-left: -4px;
    margin-top: -4px;
    background: #050517;
    border-radius: 50%;
    transition: width 0.2s ease, height 0.2s ease, margin 0.2s ease, background 0.2s ease;
  }

  .cursor-circle {
    width: 40px;
    height: 40px;
    margin-left: -20px;
    margin-top: -20px;
    border: 1.5px solid rgba(5, 5, 23, 0.4);
    border-radius: 50%;
    transition: width 0.3s ease, height 0.3s ease, margin 0.3s ease, border-color 0.2s ease, background 0.2s ease;
  }

  .cursor-dot.hovering {
    width: 12px;
    height: 12px;
    margin-left: -6px;
    margin-top: -6px;
    background: #007FFF;
  }

  .cursor-circle.hovering {
    width: 60px;
    height: 60px;
    margin-left: -30px;
    margin-top: -30px;
    border-color: rgba(0, 127, 255, 0.5);
    background: rgba(0, 127, 255, 0.05);
  }

  .cursor-dot.clicking {
    transform: scale(0.8);
  }

  .cursor-circle.clicking {
    width: 35px;
    height: 35px;
    margin-left: -17.5px;
    margin-top: -17.5px;
  }

  .cursor-dot.hidden,
  .cursor-circle.hidden {
    opacity: 0;
  }

  .dark .cursor-dot {
    background: #F9F9F9;
  }

  .dark .cursor-circle {
    border-color: rgba(249, 249, 249, 0.4);
  }

  .dark .cursor-dot.hovering {
    background: #007FFF;
  }

  .dark .cursor-circle.hovering {
    border-color: rgba(0, 127, 255, 0.6);
    background: rgba(0, 127, 255, 0.1);
  }

  input, textarea, select {
    cursor: auto !important;
  }

  @media (hover: hover) and (pointer: fine) {
    html {
      cursor: none;
    }

    a, button, [role="button"] {
      cursor: none;
    }
  }

  @media (hover: none) or (pointer: coarse) {
    .cursor-dot,
    .cursor-circle {
      display: none !important;
    }
  }
  */

</style>

<script type="module" src="/scripts/page-transition.js"></script>
