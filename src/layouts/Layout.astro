---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="../../main.css" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="container mx-auto">
    <div>
      <Nav />
      <slot />
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "NeueMontrealMono";
    src: url("../font/PPNeueMontrealMono-Regular.woff") format("woff");
  }
  @font-face {
    font-family: "NeueMontrealMono";
    src: url("../font/PPNeueMontrealMono-Thin.woff") format("woff");
    font-weight: 100;
  }
  @font-face {
    font-family: "NeueMontrealMono";
    src: url("../font/PPNeueMontrealMono-RegularItalic.woff") format("woff");
    font-style: italic;
  }
  @font-face {
    font-family: "EditorialNew";
    src: url("../font/PPEditorialNew-Thin.woff") format("woff");
    font-weight: 100;
  }
  @font-face {
    font-family: "NeueMontreal";
    src: url("../font/PPNeueMontreal-Regular.woff") format("woff");
  }
  @font-face {
    font-family: "NeueMontreal";
    src: url("../font/PPNeueMontreal-Bold.woff") format("woff");
    font-weight: 700;
  }
</style>
