---
interface Props {
  isLarge: boolean;
  value: string;
}

const { isLarge, value } = Astro.props;
---

<p
  class={isLarge
    ? "group-hover:text-white text-sm uppercase transition-all ease-in-out px-3 py-1"
    : "group-hover:text-white group-hover:bg-blue text-sm uppercase transition-all ease-in-out bg-white border-black border-solid"}
>
  {value}
</p>
