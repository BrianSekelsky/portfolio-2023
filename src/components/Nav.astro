const currentPath = pathname.slice(1); // remove the first "/"
---

<div class="border-b">
  <div class="container mx-auto">
    <div
      class="text-center lg:text-left grid grid-cols-1 lg:flex justify-between p-3 content-center items-center"
    >
      <NavLink href="/#" name="BRIAN SEKELSKY" />
      <div class="mt-6 lg:mt-0 grid grid-cols-1 lg:flex flex-wrap lg:gap-16">
        <NavLink href="/" name="DESIGN" />
        <NavLink href="/music" name="MUSIC" />
        <NavLink href="/about" name="ABOUT" />
      </div>
    </div>
  </div>
</div>
