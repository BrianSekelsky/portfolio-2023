---
import NavLink from "./Nav-link.astro";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<nav class="nav-load-in">
  <div class="mx-auto">
    <div class="flex flex-wrap justify-center gap-4 lg:flex-nowrap sm:justify-between p-4 py-8 site-padding">
      <div class="w-full">
        <a href="/#" class="w-full bold lg:first:ml-0 flex justify-center lg:justify-start hover:text-accent-blue dark:hover:text-accent-blue transition-all dark:text-dark-text"
          >Brian Sekelsky</a
        >
      </div>
      <div class="flex flex-wrap justify-center lg:justify-end gap-8 pt-2 sm:pt-0 w-full">
        <NavLink href="/" name="Projects" />
        <NavLink href="/about/" name="About" />
        <NavLink href="/music/" name="Music" />
        <NavLink href="/teaching/" name="Teaching" />
      </div>
    </div>
  </div>
</nav>

<style>
  .nav-load-in {
    opacity: 0;
    animation: navLoadIn 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes navLoadIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .nav-load-in {
      animation: none;
      opacity: 1;
    }
  }
</style>
