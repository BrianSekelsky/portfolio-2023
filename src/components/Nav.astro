---
import NavLink from "./Nav-link.astro";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<div class="block sm:hidden">
  <div class="mx-auto">
    <div class="flex flex-wrap sm:justify-between p-4 font-mono">
      <div class="w-full sm:w-1/2">
        <NavLink href="/#" name="BRIAN SEKELSKY" />
      </div>
      <div class="flex flex-wrap gap-8 pt-2 sm:pt-0">
        <NavLink href="/" name="DESIGN" />
        <NavLink href="/music" name="MUSIC" />
        <NavLink href="/about" name="ABOUT" />
        <NavLink href="/teaching" name="TEACHING" />
      </div>
    </div>
  </div>
</div>
<div class="hidden sm:block">
  <div class="">
    <div
      class="flex justify-start sm:justify-between py-9 font-mono rotate-180 writing-mode min-h-full min-w-full items-center bg"
    >
      <div class="w-full sm:w-1/2 text-left">
        <NavLink href="/#" name="BRIAN SEKELSKY" />
      </div>
      <div class="flex flex-wrap gap-8 pt-6 sm:pt-0">
        <NavLink href="/about" name="ABOUT" />
        <NavLink href="/" name="DESIGN" />
        <NavLink href="/music" name="MUSIC" />
        <NavLink href="/teaching" name="TEACHING" />
      </div>
    </div>
  </div>
</div>

<style>
  .writing-mode {
    writing-mode: vertical-rl;
  }
</style>
