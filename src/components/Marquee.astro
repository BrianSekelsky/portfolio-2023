    <span class="marquee-content">{text}</span>
    <span class="marquee-content">{text}</span>                                
  </div>
</div>

<style>
  .marquee-container {
    width: 100%;
    overflow: hidden;
  }
  
  .marquee {
    display: flex;
    width: fit-content;
    gap: 2rem;
    will-change: transform;
  }
  
  .marquee-content {
    white-space: nowrap;
    line-height: 1;
    animation: scroll linear infinite;
  }
  
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% - 2rem));
    }
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const marquees = document.querySelectorAll('.marquee');
    
    marquees.forEach((marquee) => {
      const speed = parseFloat(marquee.getAttribute('data-speed') || '100');
      const firstContent = marquee.querySelector('.marquee-content');
      
      if (firstContent) {
        const contentWidth = firstContent.offsetWidth;
        const duration = contentWidth / speed;
        
        marquee.querySelectorAll('.marquee-content').forEach((content) => {
          (content as HTMLElement).style.animationDuration = `${duration}s`;
        });
      }
    });
  });
</script>