---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import video from "../../images/homepage/iasdr.webm";
import { Image } from "astro:assets";
import gif from "../../images/homepage/iasdr.png";

const title =
  "Preserving theoretically-grounded functions across media platforms in interaction design";
const year = "2023";
const types = [{ text: "Writing", special: false }];
const alt = "Screenshot of the paper";
---

<Card
  size="small"
  href="https://dl.designresearchsociety.org/iasdr/iasdr2023/fullpapers/184/"
  title={title}
  types={types}
  year={year}
>
  <div class="video hidden md:block">
    <video
      class="transition-all group-hover:rounded-xl"
      playsinline
      autoplay
      muted
      loop
    >
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
