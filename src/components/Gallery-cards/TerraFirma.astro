---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import { Image } from "astro:assets";

import gif from "../../images/homepage/terrafirma2.png";
import video from "../../images/homepage/terrafirma.webm";

const title = "Terrafirma Software";
const description = "asdf";
const year = "2021";
const types = [
  { text: "Visual", special: false },
  { text: "Website", special: false },
];
const size = "small";
const hasVideo = false;
const alt = "Terrafirma logo and other branded materials including webpages";
---

<Card
  size="medium"
  href="projects/terrafirma"
  title={title}
  types={types}
  year={year}
>
  <div class="video hidden">
    <video
      class="transition-all"
      playsinline
      autoplay
      muted
      loop
      preload="none"
    >
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block">
    <Image src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
