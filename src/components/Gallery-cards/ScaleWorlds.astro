---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import { Image } from "astro:assets";
import image from "../../images/homepage/scale-worlds.png";
import video from "../../images/homepage/scale-worlds.webm";
import videomp4 from "../../images/homepage/scale-worlds.mp4";

const title = "Scale Worlds";
const description = "this is an explanation about project 1";
const year = "2021–⁠2023";
const types = [
  { text: "UX", special: false },
  { text: "Virtual Reality", special: false },
];
const size = "medium";
const hasVideo = true;
const alt =
  "Clip of zooming out from astronaut perspective up to whale perspective";
---

<Card
  size="medium"
  href="projects/scale-worlds"
  title={title}
  types={types}
  year={year}
  myColor="#E7F5FE"
  description="Creating an immersive virtual environment, where students can see various scientific entities in relation to their own bodies and conduct realistic size comparisons that cannot be replicated in everyday experience."
>
  <div class="hidden md:block">
    <video
      class="transition-all video-center"
      playsinline
      autoplay
      muted
      loop
      preload="none"
    >
      <source
        src={video}
        type="video/webm"
        media="screen and (min-width:640px)"
      />
      <source
        src={videomp4}
        type="video/mp4"
        media="screen and (min-width:640px)"
      />
    </video>
  </div>
  <div class="flex md:hidden">
    <Image class="transition-all" src={image} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }

  .bg-color {
    background-color: var(--myColor);
  }
</style>
