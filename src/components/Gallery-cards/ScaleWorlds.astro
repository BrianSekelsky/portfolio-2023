---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import { Image } from "astro:assets";
import video from "../../images/homepage/scale-worlds.webm";
import gif from "../../images/homepage/scale-worlds.gif";

const title = "Scale Worlds";
const description = "this is an explanation about project 1";
const year = "2021–⁠2023";
const types = [
  { text: "User Experience", special: false },
  { text: "Virtual Reality", special: false },
];
const size = "medium";
const hasVideo = true;
const src = "src/images/homepage/scale-worlds.webm";
const alt =
  "Clip of zooming out from astronaut perspective up to whale perspective";
---

<Card size="medium" href="#" title={title} types={types} year={year}>
  <div class="video hidden md:block">
    <video playsinline autoplay muted loop>
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
