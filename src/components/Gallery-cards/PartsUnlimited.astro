---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import { Image } from "astro:assets";

import myImage from "../../images/homepage/parts-unlimited.png";

const title = "Parts Unlimited";
const description = "asdf";
const year = "2019";
const types = [
  { text: "Website", special: false },
  { text: "User Experience", special: false },
];
const size = "small";
const hasVideo = false;
const alt =
  "Screenshot of parts unlimited website showing snow related products and more";
---

<Card size="small" href="#" title={title} types={types} year={year}>
  <Image
    class="transition-all group-hover:rounded-2xl"
    src={myImage}
    alt={alt}
  />
</Card>

<style>
  img {
    width: 100%;
  }
</style>
