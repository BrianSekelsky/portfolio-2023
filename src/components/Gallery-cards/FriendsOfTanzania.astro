---
import Card from "../Card.astro";
import { Image } from "astro:assets";
import thumbnail from "../../images/fotanzania/cover-image.png";

const props = {
  title: "Friends of Tanzania",
  description:
    "Bringing clarity and organization to the website of a great non-profit serving vulnerable populations in Tanzania.",
  year: "2025",
  types: [
    { text: "Website", special: false },
    { text: "Development", special: false },
  ],
  size: "small",
  href: "projects/fotanzania",
  myColor: "honeydew",
  alt: "Clip of zooming out from astronaut perspective up to whale perspective",
};
---

<Card {...props}>
  <div class="flex justify-center items-center bg-color h-full">
    <div class="block">
      <Image src={thumbnail} alt={props.alt} class="w-full transition-all" />
    </div>
  </div>
</Card>