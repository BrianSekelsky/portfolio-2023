---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import { Image } from "astro:assets";
import gif from "../../images/homepage/around.gif";
import video from "../../images/homepage/around.webm";

const title = "Around";
const description = "asdf";
const year = "2022";
const types = [
  { text: "Visual", special: false },
  { text: "Album Art", special: false },
];
const hasVideo = false;
const src = "src/images/homepage/around.gif";
const alt = "Flowers swirling in and out in a psychadelic way";
---

<Card
  size="small"
  href="projects/around"
  title={title}
  types={types}
  year={year}
>
  <div class="video hidden md:block">
    <video
      class="transition-all"
      playsinline
      autoplay
      muted
      loop
      preload="none"
    >
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
