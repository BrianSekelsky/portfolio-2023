---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import { Image } from "astro:assets";
import myImage from "../../images/homepage/around.gif";

const title = "Around";
const description = "asdf";
const year = "2022";
const types = [
  { text: "Album Art", special: false },
  { text: "Graphic Design", special: false },
];
const hasVideo = false;
const src = "src/images/homepage/around.gif";
const alt = "Flowers swirling in and out in a psychadelic way";
---

<Card size="small" href="#" title={title} types={types} year={year}>
  <Image
    class="transition-all group-hover:rounded-xl"
    src={myImage}
    alt={alt}
  />
</Card>

<style>
  img {
    width: 100%;
  }
</style>
