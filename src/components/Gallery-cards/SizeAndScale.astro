---
import CardLabel from "../Card-label.astro";
import webm from "../../images/homepage/size&scale2.webm"

    const title="Visualizing Size & Scale"
    const description="this is an explanation about project 1"
    const year="2023"
    const types=["Research // ", "User Experience // ", "Web development"]
    const size="medium"
    const hasVideo=true
    const alt="Clip of zooming out from astronaut perspective up to whale perspective"
    
---

<div
  class=
    "bg-white hover:bg-blue px-12 py-3 group w-full col-span-2 lg:row-span-2 relative transition ease-in-out hover:cursor-pointer"
>
  <a href="projects/size-and-scale">
  <div class="flex flex-col justify-between min-h-full">
    <div class="pb-3 text-center">
      <CardLabel value={title} , isLarge={true} />
    </div>
    <!-- <Image src={myImage} alt="image of the highest mountain" /> -->
    <div class={hasVideo ? "" : "hidden"}>
      <video class="mx-auto" width="600" height="600" playsinline autoplay muted loop>
        <source src={webm} type="video/webm">
      </video>
    </div>
    <div class="flex justify-between pt-3">
      <div class="flex flex-wrap gap-2">
        {
          types.map((type) => (
          <CardLabel value={type} , isLarge={false} />
          ))
        }
      </div>
      <div class="">
        <CardLabel value={year} , isLarge={false} />
      </div>
    </div>
</div>
</a>
</div>

<style>
  img {
    width: 100%;
  }
</style>
