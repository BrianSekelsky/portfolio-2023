---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import video from "../../images/homepage/size&scale-broswer.webm";
import { Image } from "astro:assets";
import gif from "../../images/homepage/size-scale-still.png";

const title = "Visualizing Size & Scale";
const description =
  "Designing and creating virtual reality and web-based learning environments where students can experience scales ranging from the size of the universe down to an atom.";
const year = "2023";
const types = [
  { text: "Website", special: false },
  { text: "UX", special: false },
  { text: "Branding", special: false },
  { text: "Research", special: false },
  { text: "CaseStudy", special: true },
];
const size = "medium";
const hasVideo = true;
const alt =
  "Clip of zooming out from astronaut perspective up to whale perspective";
---

<Card
  size="medium"
  href="projects/size-and-scale"
  title={title}
  types={types}
  year={year}
  myColor="honeydew"
  description={description}
>
  <div class="video hidden md:flex justify-center items-center bg-color h-full">
    <video
      class="transition-all rounded-sm shadow-xl video w-5/6 h-min"
      playsinline
      autoplay
      muted
      loop
      preload="none"
    >
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image class="transition-all rounded-sm" src={gif} alt={alt} />
  </div>
</Card>

<style>
  .bg-color {
    background-color: var(--myColor);
  }
</style>
