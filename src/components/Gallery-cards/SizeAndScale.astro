---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import video from "../../images/homepage/size&scale.webm";
import { Image } from "astro:assets";
import gif from "../../images/homepage/size&scale.gif";

const title = "Visualizing Size & Scale";
const description = "this is an explanation about project 1";
const year = "2023";
const types = [
  { text: "Research", special: false },
  { text: "User Experience", special: false },
  { text: "Web Development", special: false },
  { text: "+ Case Study", special: true },
];
const size = "medium";
const hasVideo = true;
const alt =
  "Clip of zooming out from astronaut perspective up to whale perspective";
---

<Card
  size="medium"
  href="projects/size-and-scale"
  title={title}
  types={types}
  year={year}
>
  <div class="video hidden md:block">
    <video
      class="transition-all group-hover:rounded-xl"
      playsinline
      autoplay
      muted
      loop
    >
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image class="transition-all group-hover:rounded-xl" src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
