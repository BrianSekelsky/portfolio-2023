---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import video from "../../images/homepage/size&scale2.mp4";
import { Image } from "astro:assets";
import gif from "../../images/homepage/size&scale2.gif";

const title = "Visualizing Size & Scale";
const description = "this is an explanation about project 1";
const year = "2023";
const types = ["Research", "User Experience", "Web development", "Three JS"];
const size = "medium";
const hasVideo = true;
const alt =
  "Clip of zooming out from astronaut perspective up to whale perspective";
---

<Card
  size="medium"
  href="projects/size-and-scale"
  title={title}
  types={types}
  year={year}
>
  <div class="video hidden md:block">
    <video playsinline autoplay muted loop>
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
