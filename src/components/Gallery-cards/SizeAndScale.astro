---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import video from "../../images/homepage/size&scale.webm";
import { Image } from "astro:assets";
import gif from "../../images/homepage/size-scale-still.png";

const title = "Scale Worlds";
const description =
  "Designing and creating virtual reality and web-based learning environments where students can experience scales ranging from the size of the universe down to an atom.";
const year = "2023";
const types = [
  { text: "Website", special: false },
  { text: "UX", special: false },
  { text: "VR", special: false },
  { text: "Visual", special: false },
  { text: "Research", special: false },
  { text: "CaseStudy", special: true },
];
const size = "medium";
const hasVideo = true;
const alt =
  "Clip of zooming out from astronaut perspective up to whale perspective";
---

<Card
  size="medium"
  href="projects/size-and-scale"
  title={title}
  types={types}
  year={year}
  myColor="ghostwhite"
  description={description}
>
  <div class="video hidden md:block">
    <video
      class="transition-all rounded-sm shadow-md video"
      playsinline
      autoplay
      muted
      loop
      preload="none"
    >
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image class="transition-all" src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }

  .video {
    height: 220px;
    width: 100%;
    object-fit: cover;
    object-position: top;
  }
</style>
