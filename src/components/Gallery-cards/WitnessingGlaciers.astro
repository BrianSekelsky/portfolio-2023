---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import video from "../../images/homepage/glaciers.webm";
import videomp4 from "../../images/homepage/glaciers.mp4";
import poster from "../../images/homepage/glaciers-poster.jpg";
import { Image } from "astro:assets";
import gif from "../../images/homepage/glaciers.png";

const title = "Witnessing Glaciers";
const description = "this is an explanation about project 1";
const year = "2022";
const types = [
  { text: "Website", special: false },
  { text: "Branding", special: false },
];
const size = "medium";
const hasVideo = true;
const alt =
  "Clip of zooming out from astronaut perspective up to whale perspective";
---

<Card
  size="small"
  href="projects/witnessing-glaciers"
  title={title}
  types={types}
  year={year}
  myColor="ghostwhite"
  description="Web-based storytelling project sharing data about landmark glaciers and emphathizing environmental urgency."
>
  <div class="hidden md:flex justify-center items-center bg-color h-full">
    <video
      class="transition-all"
      playsinline
      autoplay
      muted
      loop
      preload="metadata"
      poster={poster.src}
    >
      <source
        src={video}
        type="video/webm"
      />
      <source
        src={videomp4}
        type="video/mp4"
      />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image class="transition-all" src={gif} alt={alt} loading="lazy" />
  </div>
</Card>

<style>
  .bg-color {
    position: relative;
    background-color: var(--myColor);
  }
</style>
