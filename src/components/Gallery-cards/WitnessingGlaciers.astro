---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import src from "../../images/homepage/glaciers.webm"

const title="Witnessing Glaciers"
const description="this is an explanation about project 1"
const year="2022"
const types=["Web development // ", "Three JS"]
const size="medium"
const hasVideo=true
const alt="Clip of zooming out from astronaut perspective up to whale perspective"
---

<Card size="medium" href="#">
  <div class="pb-3 text-center">
    <CardLabel value={title} , isLarge={true} />
  </div>
  <!-- <Image src={myImage} alt="image of the highest mountain" /> -->
  <div class={hasVideo ? "" : "hidden"}>
    <video class="mx-auto" width="600" height="600" playsinline autoplay muted loop>
      <source src={src} type="video/webm">
    </video>
  </div>
  <div class="flex justify-between pt-3">
    <div class="flex flex-wrap gap-2">
      {
        types.map((type) => (
        <CardLabel value={type} , isLarge={false} />
        ))
      }
    </div>
    <div class="">
      <CardLabel value={year} , isLarge={false} />
    </div>
  </div>
</Card>

<style>
img {
width: 100%;
}
</style>
