---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import video from "../../images/homepage/glaciers.webm";
import { Image } from "astro:assets";
import gif from "../../images/homepage/glaciers.png";

const title = "Witnessing Glaciers";
const description = "this is an explanation about project 1";
const year = "2022";
const types = [
  { text: "Website", special: false },
  { text: "Visual", special: false },
  { text: "+ case study", special: true },
];
const size = "medium";
const hasVideo = true;
const alt =
  "Clip of zooming out from astronaut perspective up to whale perspective";
---

<Card
  size="medium"
  href="projects/witnessing-glaciers"
  title={title}
  types={types}
  year={year}
>
  <div class="video hidden md:block">
    <video
      class="transition-all group-hover:rounded-2xl"
      playsinline
      autoplay
      muted
      loop
      preload="none"
    >
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image class="transition-all group-hover:rounded-xl" src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
