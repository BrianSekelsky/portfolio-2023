---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import video from "../../images/homepage/glaciers.webm";
import { Image } from "astro:assets";
import gif from "../../images/homepage/glaciers.gif";

const title = "Witnessing Glaciers";
const description = "this is an explanation about project 1";
const year = "2022";
const types = ["Web development", "Three JS"];
const size = "medium";
const hasVideo = true;
const alt =
  "Clip of zooming out from astronaut perspective up to whale perspective";
---

<Card size="medium" href="#" title={title} types={types} year={year}>
  <div class="video hidden md:block">
    <video playsinline autoplay muted loop>
      <source src={video} type="video/mp4" />
    </video>
  </div>
  <div class="gif block md:hidden object-fill">
    <Image src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
