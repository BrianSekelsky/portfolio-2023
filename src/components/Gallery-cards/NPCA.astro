---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import { Image } from "astro:assets";
import gif from "../../images/homepage/npca.gif";
import video from "../../images/homepage/npca.webm";

const title = "National Peace Corps Association";
const description = "asdf";
const year = "2020â€“2021";
const types = [
  { text: "Website", special: false },
  { text: "Visual", special: false },
];
const hasVideo = false;
const src = "src/images/homepage/npca.gif";
const alt = "Images of work I did with NPCA";
---

<Card size="small" href="#" title={title} types={types} year={year}>
  <div class="video hidden md:block">
    <video
      class="transition-all group-hover:rounded-xl"
      playsinline
      autoplay
      muted
      loop
    >
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
