---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import { Image } from "astro:assets";

import gif from "../../images/homepage/deliberate.gif";
import video from "../../images/homepage/deliberate.webm";

const title = "Deliberate AI";
const description = "asdf";
const year = "2022";
const types = [
  { text: "User Experience", special: false },
  { text: "Visual", special: false },
  { text: "AI", special: false },
];
const size = "small";
const hasVideo = false;
const alt =
  "Deliberate AI logo and screens from prototypes for the Deliberate AI health application.";
---

<Card
  size="small"
  href="projects/deliberate"
  title={title}
  types={types}
  year={year}
>
  <div class="video hidden md:block">
    <video
      class="transition-all group-hover:rounded-2xl"
      playsinline
      autoplay
      muted
      loop
      preload="none"
    >
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
