---
import CardLabel from "../Card-label.astro";
import { Image } from "astro:assets";
import Card from "../Card.astro";

import myImage from "../../images/homepage/concert-interface.gif";

const title = "DIY Concerts";
const description = "asdf";
const year = "2021";
const types = [
  { text: "Speculative", special: false },
  { text: "User Interface", special: false },
];
const size = "small";
const hasVideo = false;
const alt =
  "Kaitlyn Aurelia Smith in a experimental concert interface with cursors moving images around the screen";
---

<Card size="small" href="#" title={title} types={types} year={year}>
  <Image
    class="transition-all group-hover:rounded-xl"
    src={myImage}
    alt={alt}
  />
</Card>

<style>
  img {
    width: 100%;
  }
</style>
