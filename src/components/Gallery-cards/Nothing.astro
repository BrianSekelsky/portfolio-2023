---
import CardLabel from "../Card-label.astro";
import { Image } from "astro:assets";

import myImage from "../../images/homepage/no-content.png";

const title="Nothing"
        const description="this is an explanation about project 4"
        const year="2023"
        const types=["User experience // ", "Speculative"]
        const size="small"
        const hasVideo=false
        const src="src/images/homepage/no-content.png"
        const alt="Fake marketing slide for Nothing social media. Text reads What if social networking was content free? With three phones next to it displaying the app."
---

<div
  class="bg-white hover:bg-blue px-12 py-3 group w-full relative transition ease-in-out hover:cursor-pointer"
>
  <div class="flex flex-col justify-between min-h-full">
    <div class="pb-3 text-center">
      <CardLabel value={title} , isLarge={true} />
    </div>
    <Image src={myImage} alt={alt} />
    <div class="flex justify-between pt-3">
      <div class="flex flex-wrap gap-2">
        {
          types.map((type) => (
          <CardLabel value={type} , isLarge={false} />
          ))
        }
      </div>
      <div class="">
        <CardLabel value={year} , isLarge={false} />
      </div>
    </div>
</div>
</div>

<style>
  img {
    width: 100%;
  }
</style>
