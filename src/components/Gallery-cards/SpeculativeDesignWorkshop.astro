---
import CardLabel from "../Card-label.astro";
import { Image } from "astro:assets";

import myImage from "../../images/homepage/speculative-design-workshop.png";

const title = "Speculative Design Workshop";
const description = "asdf";
const year = "2022";
const types = ["Teaching"];
const size="small";
const hasVideo = false;
const alt = "Screenshot of the miro board that was used in the design workshop. Shows lots of text which is unreadable and small images";
---

<div
  class="bg-white hover:bg-blue px-12 py-3 group w-full relative transition ease-in-out hover:cursor-pointer"
>
  <div class="flex flex-col justify-between min-h-full">
    <div class="pb-3 text-center">
      <CardLabel value={title} , isLarge={true} />
    </div>
    <Image src={myImage} alt={alt} />
    <div class="flex justify-between pt-3">
      <div class="flex flex-wrap gap-2">
        {
          types.map((type) => (
          <CardLabel value={type} , isLarge={false} />
          ))
        }
      </div>
      <div class="">
        <CardLabel value={year} , isLarge={false} />
      </div>
    </div>
</div>
</div>

<style>
  img {
    width: 100%;
  }
</style>
