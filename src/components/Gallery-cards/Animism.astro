---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import { Image } from "astro:assets";

import video from "../../images/homepage/animism.webm";
import gif from "../../images/homepage/animism.gif";

const title = "Animistic Design";
const description = "this is an explanation about project 4";
const year = "2022";
const types = [
  { text: "Teaching", special: false },
  { text: "AI", special: false },
];
const size = "small";
const hasVideo = true;
const src = "src/images/homepage/animism.gif";
const alt = "Slideshow of images from class on animism";
---

<Card
  size="small"
  href="projects/animistic-design"
  title={title}
  types={types}
  year={year}
>
  <div class="video hidden md:block">
    <video
      class="transition-all rounded-sm"
      playsinline
      autoplay
      muted
      loop
      preload="none"
    >
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block md:hidden rounded-sm">
    <Image src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
