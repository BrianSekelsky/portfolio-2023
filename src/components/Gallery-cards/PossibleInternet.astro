---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import { Image } from "astro:assets";

import video from "../../images/homepage/ar-lit-review.webm";
import gif from "../../images/homepage/ar-lit-review.gif";

const title = "Possible Internet";
const description = "asdf";
const year = "2022";
const types = [
  { text: "UX", special: false },
  { text: "Augmented Reality", special: false },
  { text: "Speculative", special: false },
  { text: "CaseStudy", special: true },
];
const collaborators = ["Jeff Wilkinson"];
const size = "small";
const hasVideo = true;
const alt = "";
---

<Card
  size="small"
  href="projects/possible-internet"
  title={title}
  types={types}
  year={year}
>
  <div class="video hidden md:block">
    <video
      class="transition-all"
      playsinline
      autoplay
      muted
      loop
      preload="none"
    >
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image class="transition-all group-hover:rounded-xl" src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
