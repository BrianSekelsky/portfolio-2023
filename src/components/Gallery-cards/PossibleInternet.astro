---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import { Image } from "astro:assets";

import video from "../../images/homepage/possible-internet2.webm";
import image from "../../images/homepage/possible-internet.png";

const title = "Possible Internet";
const description = "asdf";
const year = "2022";
const types = [
  { text: "UX", special: false },
  { text: "XR", special: false },
  { text: "Speculative", special: false },
  { text: "CaseStudy", special: true },
];
const collaborators = ["Jeff Wilkinson"];
const size = "small";
const hasVideo = true;
const alt = "";
---

<Card
  size="small"
  href="projects/possible-internet"
  title={title}
  types={types}
  year={year}
  myColor="#FCEDDD"
>
  <div class="hidden md:block">
    <video
      class="transition-all video-center rounded-md"
      playsinline
      autoplay
      muted
      loop
      preload="none"
    >
      <source
        src={video}
        type="video/webm"
        media="screen and (min-width:640px)"
      />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image class="transition-allrounded-md" src={image} alt={alt} />
  </div>
</Card>
