---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import video from "../../images/homepage/vespertine.webm";
import image from "../../images/homepage/vespertine.png";
import { Image } from "astro:assets";

const title = "Vespertine";
const description = "asdf";
const year = "2023";
const types = [
  { text: "Website", special: false },
  { text: "Branding", special: false },
];
const hasVideo = true;
const alt =
  "Video of webpage about Bjork's Vespertine. Shows text of album title in front of three dimensional house";
---

<Card
  size="small"
  href="projects/vespertine"
  title={title}
  types={types}
  year={year}
  myColor="#BEFC5B"
>
  <div class="hidden sm:block">
    <video
      class="transition-all video-center rounded-md"
      playsinline
      autoplay
      muted
      loop
      preload="none"
    >
      <source
        src={video}
        type="video/webm"
        media="screen and (min-width:640px)"
      />
    </video>
  </div>
  <div class="gif block sm:hidden">
    <Image class="transition-all rounded-md" src={image} alt={alt} />
  </div>
</Card>
