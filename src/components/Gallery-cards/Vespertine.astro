---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import video from "../../images/homepage/vespertine.webm";
import gif from "../../images/homepage/vespertine.png";
import { Image } from "astro:assets";

const title = "Vespertine";
const description = "asdf";
const year = "2023";
const types = [
  { text: "Website", special: false },
  { text: "Visual", special: false },
];
const hasVideo = true;
const alt =
  "Video of webpage about Bjork's Vespertine. Shows text of album title in front of three dimensional house";
---

<Card
  size="small"
  href="projects/vespertine"
  title={title}
  types={types}
  year={year}
  myColor="#BEFC5B"
>
  <div class="video hidden sm:block">
    <video
      class="transition-all"
      playsinline
      autoplay
      muted
      loop
      preload="none"
    >
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block sm:hidden">
    <Image class="transition-all" src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
