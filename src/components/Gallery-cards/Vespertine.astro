---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";
import video from "../../images/homepage/vespertine3.webm";
import gif from "../../images/homepage/vespertine.png";
import { Image } from "astro:assets";

const title = "Vespertine";
const description = "asdf";
const year = "2023";
const types = ["Web development", "Three JS"];
const hasVideo = true;
const alt =
  "Video of webpage about Bjork's Vespertine. Shows text of album title in front of three dimensional house";
---

<Card size="small" href="#" title={title} types={types} year={year}>
  <div class="video hidden md:block">
    <video playsinline autoplay muted loop>
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
