---
import CardLabel from "../Card-label.astro";

import webm from "../../images/homepage/public-transit.webm";

const title = "Imagine Public Transit";
const description = "asdf";
const year = "2023";
const types = ["visual"];
const size="small";
const hasVideo = true;
const alt = "Billboard mocked up with design of text reading a car is great mode of transit provided that noone else has it";
---

<div
  class="bg-white hover:bg-blue px-12 py-3 group w-full relative transition ease-in-out hover:cursor-pointer"
>
  <div class="flex flex-col justify-between min-h-full">
    <div class="pb-3 text-center">
      <CardLabel value={title} , isLarge={true} />
    </div>
    <div class={hasVideo ? "" : "hidden"}>
      <video width="600" height="600" playsinline autoplay muted loop>
        <source src={webm} type="video/webm">
      </video>
    </div>
    <div class="flex justify-between pt-3">
      <div class="flex flex-wrap gap-2">
        {
          types.map((type) => (
          <CardLabel value={type} , isLarge={false} />
          ))
        }
      </div>
      <div class="">
        <CardLabel value={year} , isLarge={false} />
      </div>
    </div>
</div>
</div>

<style>
  img {
    width: 100%;
  }
</style>
