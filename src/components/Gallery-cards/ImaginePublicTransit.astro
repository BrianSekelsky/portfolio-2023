---
import CardLabel from "../Card-label.astro";
import Card from "../Card.astro";

import video from "../../images/homepage/public-transit.webm";
import gif from "../../images/homepage/public-transit.png";

import { Image } from "astro:assets";

const title = "Imagine Public Transit";
const description = "asdf";
const year = "2023";
const types = [
  { text: "Visual Design", special: false },
  { text: "Speculative", special: false },
];
const size = "small";
const hasVideo = true;
const alt =
  "Billboard mocked up with design of text reading a car is great mode of transit provided that noone else has it";
---

<Card
  size="small"
  href="projects/imagine-public-transport"
  title={title}
  types={types}
  year={year}
>
  <div class="video hidden md:block">
    <video
      class="transition-all group-hover:rounded-xl"
      playsinline
      autoplay
      muted
      loop
    >
      <source src={video} type="video/webm" />
    </video>
  </div>
  <div class="gif block md:hidden">
    <Image class="transition-all group-hover:rounded-xl" src={gif} alt={alt} />
  </div>
</Card>

<style>
  img {
    width: 100%;
  }
</style>
