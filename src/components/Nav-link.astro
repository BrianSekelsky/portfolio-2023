---
const currentPath = new URL(Astro.request.url).pathname;

interface Props {
  href: string;
  name: string;
}

const { href, name } = Astro.props;
---

<a href={href}>
  <span
    class={currentPath === href
      ? "underline font-bold lg:first:ml-0 hover:lowercase"
      : "lg:first:ml-0 font-bold hover:lowercase"}
  >
    {name}
  </span>
</a>
