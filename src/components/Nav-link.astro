---
const currentPath = new URL(Astro.request.url).pathname;

interface Props {
  href: string;
  name: string;
}

const { href, name } = Astro.props;
---

<a href={href}>
  <span
    class={currentPath === href
      ? "underline lg:first:ml-0 hover:underline rounded-md"
      : "lg:first:ml-0 hover:underline rounded-md"}
  >
    {name}
  </span>
</a>
