---
import CardLabel from "./Card-label.astro";

interface Props {
  size: string;
  href: string;
  title: string;
  types: { text: string; special: boolean; }[]
  year: string;
  myColor?: string;
}

const { size, href = "#", title, types, year, myColor } = Astro.props;

let mainClasses;
if (size === "small") {
  mainClasses = "bg-white group w-full hover:cursor-pointer col-span-1"
} else {
  mainClasses = "bg-white group w-full hover:cursor-pointer col-span-1"
}

let typeNames: string;

for(let i = 0; i < types.length; i++) {
  typeNames = typeNames + " " + types[i].text
}
---

<div
  class:list={[mainClasses, typeNames]}
>
  <div class="relative overflow-hidden color transition-all  duration-400">
    <a href={href}>
    <div class="m-auto transition-all duration-400">
      <slot class="duration-400" />
    </div>
    <div class="align-middle w-full h-full transition-all duration-400 py-4 flex-col justify-center rounded-none ">
      <div class="items-baseline pb-2 flex justify-between align-top">
        <CardLabel value={title} , isLarge={true} />
        <div class="pt-2">
          <CardLabel value={year} , isLarge={false} />
        </div>
      </div>
      <div class="">
        <div class="flex flex-wrap gap-2">
          {
            types.map((type) => (
            <div class={type.special ? "text-xs text-blue" : "text-black text-xs"}>
              <CardLabel value={"#" + type.text} , isLarge={false} />
            </div>
            ))
          }
        </div>
      </div>
    </div>
    </a>
  </div>
</div>

<style define:vars={{myColor}}>

.color {
  background-color: white;
}

</style>
