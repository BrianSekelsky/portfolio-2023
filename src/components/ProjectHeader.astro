---
import SmallHeading from "./SmallHeading.astro";
interface Props {
  title: string;
  objective: string;
  types: string[];
  collborators: string[];
  year: string;
  outboundLink?: string;
  music?: boolean;
  myColor?: string;
}
const {
  title,
  objective,
  types,
  collaborators,
  year,
  outboundLink = "",
  music = false,
  myColor = "white",
} = Astro.props;
---

<div class="border-b project-header">
  <div>
    <div class="p-4 sm:p-8 border-b color">
      <a href="/" class="font-mono uppercase hover:lowercase hover:text-blue"
        >‚Üê back to projects</a
      >
      <div class="pt-4">
        <p
          class="font-mono uppercase font-extralight leading-tight text-6xl sm:text-8xl break-words sm:break-normal hyphens-auto sm:hyphens-manual"
        >
          {title}
        </p>
      </div>
    </div>
    <div class="flex flex-col lg:grid grid-cols-2 text-lg lg:divide-x">
      <div class="font-extralight col-span-1 text-2xl p-4 sm:p-8 sm:py-12">
        {objective}
        <slot />
      </div>
      <div class="flex justify-between gap-12 col-span-1 p-4 sm:p-8 sm:py-12">
        <div class={music === false ? "hidden sm:block" : "hidden"}>
          <p class="font-bold">Type</p>
          <div class={types.length > 0 ? "hidden sm:block" : "hidden"}>
            {types.map((type) => <p>{type}</p>)}
          </div>
        </div>
        <div class={music === true ? "hidden sm:block" : "hidden"}>
          <p class="font-bold">Genres</p>
          <div class={types.length > 0 ? "hidden sm:block" : "hidden"}>
            {types.map((type) => <p class="">{type}</p>)}
          </div>
        </div>
        <div class="">
          <p class="font-bold">Year</p>
          <p class="">
            {year}
          </p>
        </div>
        <div class={collaborators.length > 0 ? "hidden sm:block" : "invisible"}>
          <p class="font-bold">Collaborators</p>
          <div>
            {
              collaborators.map((collaborator) => (
                <p class="">{collaborator}</p>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>

  <style define:vars={{ myColor }}>
    .color {
      background-color: white;
    }

    .gap-1 {
      gap: 1px;
    }

    .grid-template {
      grid-template-columns: 1fr 1fr;
    }

    .w-max-content {
      width: max-content;
      max-width: 50%;
    }
  </style>
</div>
