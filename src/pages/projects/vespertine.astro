---
import Layout from "../../layouts/Layout.astro";

import ProjectHeaderSmall from "../../components/ProjectHeaderSmall.astro";
import SmallHeading from "../../components/SmallHeading.astro";
import ProjectGrid from "../../components/ProjectGrid.astro";
import { Image } from "astro:assets";

import webm from "../../images/homepage/vespertine.webm";
---

<Layout title="Brian Sekelsky">
  <main>
    <ProjectHeaderSmall
      title="Vespertine"
      description="Three JS website made for Bjork's album Vespertine."
    />
    <div class="border-x">
      <div class="mx-auto border-t flex justify-center p-3">
        <video class="w-1/2" playsinline autoplay muted loop>
            <source src={webm} type="video/webm" />
          </video>
      </div>
    </div>
    <style></style>
  </main>
</Layout>
