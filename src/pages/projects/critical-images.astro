---
import Layout from "../../layouts/Layout.astro";
import webm from "../../images/size-and-scale/size&scale.webm";

import ProjectHeader from "../../components/ProjectHeader.astro";
import SmallHeading from "../../components/SmallHeading.astro";
---

<Layout title="Brian Sekelsky">
  <main>
    <ProjectHeader
      title="Critical Images"
      objective="Design a website to augment and scaffold towards size and scale cognition. Master's thesis"
      tools={["Three JS", "Javascript", "HTML/CSS", "Figma"]}
      role="Researcher"
      collaborators={[]}
    />
    <div class="mx-auto border-t px-2 py-3">
      <video playsinline autoplay muted loop>
        <source src={webm} type="video/webm" />
      </video>
    </div>
    <div class="mx-auto border-t px-2 py-3">
      <SmallHeading text="Process" />
      <p>coming soon</p>
    </div>

    <style></style>
  </main>
</Layout>
